{
    "title": "Continental Club Calendar Scraper Input",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "startUrl": {
            "title": "Start URL",
            "type": "string",
            "description": "URL of the Continental Club calendar page",
            "default": "https://continentalclub.com/austin",
            "editor": "textfield"
        },
        "maxRequestsPerCrawl": {
            "title": "Max Requests per Crawl",
            "type": "integer",
            "description": "Maximum number of pages to scrape (0 = unlimited)",
            "default": 100,
            "minimum": 0,
            "editor": "number"
        },
        "proxyConfiguration": {
            "title": "Proxy Configuration",
            "type": "object",
            "description": "Proxy settings for anti-bot protection",
            "editor": "proxy",
            "default": {
                "useApifyProxy": true
            }
        }
    },
    "required": ["startUrl"]
}